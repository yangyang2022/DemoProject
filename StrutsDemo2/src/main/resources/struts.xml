<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.action.extension" value="action,,"/>
    <constant name="struts.multipart.maxSize" value="10000000"/>
    <!--<constant name="struts.objectFactory" value="spring" />-->

    <package name="default" namespace="/" extends="struts-default">

        <!--<global-results>-->
            <!--<result name="success">/WEB-INF/views/inc/success.jsp</result>-->
            <!--<result name="error">/WEB-INF/views/inc/error.jsp</result>-->
        <!--</global-results>-->

        <global-exception-mappings>
            <exception-mapping exception="com.yangyang.exception.UserException" result="exception" />
        </global-exception-mappings>

        <!-- deps_list spring class -->
        <action name="*_*" class="com.yangyang.action.{1}Action" method="{2}">
            <result>/WEB-INF/views/{1}/{2}.jsp</result>
            <result name="redirect" type="redirect">/${url}</result>
        </action>
    </package>
</struts>

